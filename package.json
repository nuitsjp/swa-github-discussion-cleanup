{
  "name": "swa-github-discussion-cleanup",
  "version": "1.0.0",
  "description": "GitHub Action that deletes expired Azure Static Web Apps invite discussions.",
  "type": "module",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "echo 'ESLint handled by root config'",
    "bundle": "npm run package",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript && npx prettier --write dist/index.js",
    "package:watch": "npm run package -- --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "ci-test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "verify": "npm run format:check && npm run test && npm run package"
  },
  "keywords": [
    "github-actions",
    "azure-static-web-apps",
    "swa",
    "discussions"
  ],
  "author": "Atsushi Nakamura",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^9.0.0",
    "@octokit/graphql": "^9.0.3",
    "bs-logger": "^0.2.6",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "rollup": "^4.53.3",
    "ts-jest": "^29.4.5",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  }
}
